<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:robobunny="http://robobunny.com"
       android:key="sparkle_preferences">

    <com.robobunny.SeekBarPreference
        android:key="sparkleFadeRate"
        android:title="fade rate"
        android:defaultValue="8"
        robobunny:min="1"
        android:max="20"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />
    
    <com.robobunny.SeekBarPreference
        android:key="sparkleFlashLength"
        android:title="length of flash time (ms)"
        android:defaultValue="200"
        android:max="1000"
        robobunny:min="0"
        robobunny:unitsLeft=""
		robobunny:unitsRight="" />
        
    <com.robobunny.SeekBarPreference
        android:key="sparkleSparkleLength"
        android:title="length of sparkle time (ms)"
        android:defaultValue="700"
        android:max="5000"
        robobunny:min="100"
        robobunny:unitsLeft=""
		robobunny:unitsRight="" />
    
    <com.inappropirates.util.ColorPickerPreference
        android:key="sparkleFootFlashColor"
        android:title="foot flash color"
        />
    
    <com.inappropirates.util.ColorPickerPreference
        android:key="sparkleSparkleColor"
        android:title="sparkle color"
        />

</PreferenceScreen>