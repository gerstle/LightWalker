<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:robobunny="http://robobunny.com"
       android:key="sparkle_preferences">
       
	<com.robobunny.SeekBarPreference
        android:key="prefSparkleFootUpFadeRate"
        android:title="foot down fade rate"
        android:defaultValue="3"
        robobunny:min="1"
        android:max="50"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />
    
    <com.robobunny.SeekBarPreference
        android:key="preSparkleFootUpFadeRate"
        android:title="foot up fade rate"
        android:defaultValue="2"
        robobunny:min="1"
        android:max="50"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />
    
    <com.robobunny.SeekBarPreference
        android:key="prefSparkleFlashLength"
        android:title="length of flash time (ms)"
        android:defaultValue="200"
        android:max="3000"
        robobunny:min="0"
        robobunny:unitsLeft=""
		robobunny:unitsRight="" />
        
    <com.robobunny.SeekBarPreference
        android:key="prefSparkleSparkleLength"
        android:title="length of sparkle time (ms)"
        android:defaultValue="5000"
        android:max="100000"
        robobunny:min="0"
        robobunny:unitsLeft=""
		robobunny:unitsRight="" />
    
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="prefSparkleFootFlashColor"
        android:title="foot flash color"
        />
    
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="prefSparkleFootSparkleColor"
        android:title="foot sparkle color"
        />
    
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="prefSparkleLegSparkleColor"
        android:title="leg sparkle color"
        />    
</PreferenceScreen>