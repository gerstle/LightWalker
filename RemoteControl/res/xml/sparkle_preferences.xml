<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:robobunny="http://robobunny.com"
       android:key="sparkle_preferences">
       
	<com.robobunny.SeekBarPreference
        android:key="sparkleFootDownFadeRate"
        android:title="foot down fade rate"
        android:defaultValue="1"
        robobunny:min="1"
        android:max="50"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />
    
    <com.robobunny.SeekBarPreference
        android:key="sparkleFootUpFadeRate"
        android:title="foot up fade rate"
        android:defaultValue="1"
        robobunny:min="1"
        android:max="50"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />
    
    <com.robobunny.SeekBarPreference
        android:key="sparkleFlashLength"
        android:title="length of flash time (ms)"
        android:defaultValue="200"
        android:max="2000"
        robobunny:min="0"
        robobunny:unitsLeft=""
		robobunny:unitsRight="" />
        
    <com.robobunny.SeekBarPreference
        android:key="sparkleSparkleLength"
        android:title="length of sparkle time (ms)"
        android:defaultValue="600"
        android:max="10000"
        robobunny:min="0"
        robobunny:unitsLeft=""
		robobunny:unitsRight="" />
    
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="sparkleFootFlashColor"
        android:title="foot flash color"
        />
    
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="sparkleFootSparkleColor"
        android:title="foot sparkle color"
        />
    
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="sparkleLegSparkleColor"
        android:title="leg sparkle color"
        />    
</PreferenceScreen>