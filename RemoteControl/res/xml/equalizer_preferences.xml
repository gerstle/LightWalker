<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:robobunny="http://robobunny.com"
       android:key="equalizer_preferences">
       
        <com.robobunny.SeekBarPreference
        android:key="eqRMSThreshold"
        android:title="RMS Threshold"
        android:defaultValue="150"
        android:max="500"
        robobunny:min="0"
        />
        
    <com.inappropirates.remotecontrol.ColorPickerPreference
        android:key="eqColor"
        android:title="color"
        />
    
    <CheckBoxPreference
		android:defaultValue="false"
        android:key="eqAllLights"
        android:title="all lights" />
    
    <CheckBoxPreference
		android:defaultValue="false"
        android:key="eqAllBands"
        android:title="all bands" />
    
</PreferenceScreen>