<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:robobunny="http://robobunny.com"
       android:key="equalizer_preferences">
       
    <com.robobunny.SeekBarPreference
        android:key="eqRMSThreshold"
        android:title="RMS Threshold"
        android:defaultValue="115"
        android:max="1024"
        robobunny:min="0"
        />

    <com.robobunny.SeekBarPreference
        android:key="eqMinValue"
        android:title="Min Brightness"
        android:defaultValue="50"
        android:max="255"
        robobunny:min="0"
        />
    
    <com.inappropirates.util.ColorPickerPreference
        android:key="eqColor"
        android:title="color"
        />
    
    <CheckBoxPreference
		android:defaultValue="false"
        android:key="eqAllLights"
        android:title="all lights" />
    
    <CheckBoxPreference
		android:defaultValue="false"
        android:key="eqAllBands"
        android:title="all bands" />
    
    <CheckBoxPreference
		android:defaultValue="true"
        android:key="eqRainbow"
        android:title="rainbow of fruit flavor?" />

</PreferenceScreen>