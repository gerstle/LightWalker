<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inappropirates.remotecontrol"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.inappropirates.remotecontrol.LightWalkerRemote"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                                    
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.inappropirates.remotecontrol.ModeEqualizerConfigActivity"
            android:label="@string/title_activity_mode_equalizer_config" >
        </activity>
        <activity
            android:name="com.inappropirates.remotecontrol.ModeSparkleConfigActivity"
            android:label="@string/title_activity_mode_sparkle_config" >
        </activity>
        <activity
            android:name="com.inappropirates.remotecontrol.ModeGravityConfigActivity"
            android:label="@string/title_activity_mode_gravity_config" >
        </activity>
        <activity android:name="com.inappropirates.util.bluetooth.DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
    </application>

</manifest>